<yandex>
    <remote_servers>
        <cluster1-replicas>
            <shard>
                <internal_replication>false</internal_replication>
                <replica>
                    <host>clickhouse-node1</host>
                    <port>9000</port>
                </replica>
                <replica>
                    <host>clickhouse-node1b</host>
                    <port>9000</port>
                </replica>
            </shard>
        </cluster1-replicas>
    </remote_servers>
    <logger>
        <level>information</level>
        <console>1</console>
    </logger>
    <zookeeper>
        <node>
            <host>zookeeper-node</host>
            <port>2181</port>
        </node>
        <session_timeout_ms>30000</session_timeout_ms>
        <operation_timeout_ms>10000</operation_timeout_ms>
    </zookeeper>
    <macros>
        <shard>1</shard>
        <replica>2</replica>
    </macros>
</yandex>